{
    "manifest_version": 3,
    "name": "[n01.online] RCU Client",
    "version": "1.0.1",
    "background": {
        "service_worker": "sw.js"
    },

    "action": {
        "default_icon": {
            "16": "icons/default.png",
            "36": "icons/default.png",
            "48": "icons/default.png",
            "120": "icons/default.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://nakka.com/n01/online/",
                "https://nakka.com/n01/online/n01.php"
            ],
            "js": [
                "index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/helpers.js",
                "src/websocket.js",
                "src/index.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ]
}
